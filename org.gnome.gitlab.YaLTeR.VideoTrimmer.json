{
    "app-id" : "org.gnome.gitlab.YaLTeR.VideoTrimmer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "20.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "command" : "video-trimmer",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        {
            "name" : "ffmpeg",
            "config-opts" : [
                "--disable-doc",
                "--disable-decoders",
                "--disable-encoders",
                "--disable-devices",
                "--disable-ffplay",
                "--disable-ffprobe",
                "--enable-gpl"
            ],
            "cleanup" : [
                "/include",
                "/lib",
                "/share"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.ffmpeg.org/releases/ffmpeg-4.3.1.tar.xz",
                    "sha256" : "ad009240d46e307b4e03a213a0f49c11b650e445b1f8be0dda2a9212b34d2ffb"
                }
            ]
        },
        {
            "name" : "video-trimmer",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/video-trimmer/uploads/9e8ec3c351a6f183b0b0f89e9c173063/video-trimmer-0.5.0.tar.xz",
                    "sha256" : "de620a48e8126cab568c23ffd95aeb63815380d9cc3c44efaf0dd86c0663a9d4"
                }
            ]
        }
    ]
}
