{
    "app-id" : "org.gnome.gitlab.YaLTeR.VideoTrimmer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions" : {
        "org.freedesktop.Platform.ffmpeg-full" : {
            "directory" : "lib/ffmpeg",
            "version" : "21.08",
            "add-ld-path" : "."
        }
    },
    "cleanup-commands" : [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "command" : "video-trimmer",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup" : [
        "/bin/blueprint-compiler",
        "/lib/pkgconfig"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        {
            "name" : "blueprint",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "commit" : "d0cf13b2c45e121ee93f3472dcc6c9edb5ac4f84"
                }
            ]
        },
        {
            "name" : "video-trimmer",
            "buildsystem" : "meson",
            "sources" : [
                {
                    /* Commit 258b43c92c6f409e0d6d5e787e0de588acc23223 with translation and dependency updates over 0.7.0. */
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/video-trimmer/uploads/480683209ffd5fcbaf70d9c974fe06b0/video-trimmer-0.7.0.tar.xz",
                    "sha256" : "1c39f26de53a4b5fd117e9470012343f27005c9e070caea0f89b463ad07f46fc"
                }
            ]
        }
    ]
}
