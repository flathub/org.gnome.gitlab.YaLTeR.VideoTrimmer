{
    "app-id" : "org.gnome.gitlab.YaLTeR.VideoTrimmer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "19.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "command" : "video-trimmer",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/video-trimmer/cargo",
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "video-trimmer=debug"
        }
    },
    "modules" : [
        {
            "name" : "ffmpeg",
            "config-opts" : [
                "--disable-doc",
                "--disable-decoders",
                "--disable-encoders",
                "--disable-devices",
                "--disable-ffplay",
                "--disable-ffprobe",
                "--enable-gpl"
            ],
            "cleanup" : [
                "/include",
                "/lib",
                "/share"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.ffmpeg.org/releases/ffmpeg-4.2.2.tar.xz",
                    "sha256" : "cb754255ab0ee2ea5f66f8850e1bd6ad5cac1cd855d0a2f4990fb8c668b0d29c"
                }
            ]
        },
        {
            "name" : "video-trimmer",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/video-trimmer/uploads/d18b0d266af3d0164c6fc7f2a22e87b9/video-trimmer-0.3.1.tar.xz",
                    "sha256" : "2ea99d192bcdea61b6ed81cbd56b95b890c7747eff11dff21f04223fd8ab6676"
                }
            ]
        }
    ]
}
