{
    "app-id" : "org.gnome.gitlab.YaLTeR.VideoTrimmer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.38",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "20.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "command" : "video-trimmer",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/video-trimmer/cargo",
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "video-trimmer=debug"
        }
    },
    "modules" : [
        {
            "name" : "ffmpeg",
            "config-opts" : [
                "--disable-doc",
                "--disable-decoders",
                "--disable-encoders",
                "--disable-devices",
                "--disable-ffplay",
                "--disable-ffprobe",
                "--enable-gpl"
            ],
            "cleanup" : [
                "/include",
                "/lib",
                "/share"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.ffmpeg.org/releases/ffmpeg-4.3.1.tar.xz",
                    "sha256" : "ad009240d46e307b4e03a213a0f49c11b650e445b1f8be0dda2a9212b34d2ffb"
                }
            ]
        },
        {
            "name" : "video-trimmer",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/video-trimmer/uploads/b0b1b06e35c062e26de279507bf79cf9/video-trimmer-0.4.1.tar.xz",
                    "sha256" : "41a74f908c8f3762bd6498f1adc9b1fb31070da0bac5cc02bd54d9288568d6a5"
                }
            ]
        }
    ]
}
