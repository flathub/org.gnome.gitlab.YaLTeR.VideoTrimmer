{
    "app-id" : "org.gnome.gitlab.YaLTeR.VideoTrimmer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions" : {
        "org.freedesktop.Platform.ffmpeg-full" : {
            "directory" : "lib/ffmpeg",
            "version" : "20.08",
            "add-ld-path" : "."
        }
    },
    "cleanup-commands" : [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "command" : "video-trimmer",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        {
            "name" : "ffmpeg",
            "config-opts" : [
                "--disable-doc",
                "--disable-decoders",
                "--disable-encoders",
                "--disable-devices",
                "--disable-ffplay",
                "--enable-gpl"
            ],
            "cleanup" : [
                "/include",
                "/lib",
                "/share"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://ffmpeg.org/releases/ffmpeg-4.4.tar.xz",
                    "sha256" : "06b10a183ce5371f915c6bb15b7b1fffbe046e8275099c96affc29e17645d909"
                }
            ]
        },
        {
            "name" : "libsass",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "sassc",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "gtk",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dbuild-examples=false",
                "-Dbuild-tests=false",
                "-Ddemos=false",
                "-Dmedia-ffmpeg=disabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtk.git",
                    "tag" : "4.4.0",
                    "commit" : "f1f197e3b94a55d5cbfaae2498f991a0ae733b32"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "commit" : "e947ca63d57d65ef45383ff4cd65c95c7695ed05"
                }
            ]
        },
        {
            "name" : "video-trimmer",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/video-trimmer/uploads/00b25e36ca21c275ee912e2391c252d7/video-trimmer-0.6.1.tar.xz",
                    "sha256" : "13a7a513355f8ac68ea0c9d2e2d06be69f040444c35e7610d34e1d5a24618885"
                }
            ]
        }
    ]
}
