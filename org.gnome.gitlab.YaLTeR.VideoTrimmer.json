{
    "app-id" : "org.gnome.gitlab.YaLTeR.VideoTrimmer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions" : {
        "org.freedesktop.Platform.ffmpeg-full" : {
            "directory" : "lib/ffmpeg",
            "version" : "21.08",
            "add-ld-path" : "."
        }
    },
    "cleanup-commands" : [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "command" : "video-trimmer",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup" : [
        "/bin/blueprint-compiler",
        "/lib/pkgconfig"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        {
            "name" : "blueprint",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "commit" : "d0cf13b2c45e121ee93f3472dcc6c9edb5ac4f84"
                }
            ]
        },
        {
            "name" : "video-trimmer",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/video-trimmer/uploads/1d54dd512d0ea28c9935c8651b01e990/video-trimmer-0.7.1.tar.xz"
                    "sha256" : "20317fc86c0b4f8d0f66c93402a6bde50bc522949272bdc83ca8188078056423"
                }
            ]
        }
    ]
}
