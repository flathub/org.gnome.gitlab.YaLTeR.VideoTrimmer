{
    "app-id" : "org.gnome.gitlab.YaLTeR.VideoTrimmer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "20.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "command" : "video-trimmer",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        {
            "name" : "ffmpeg",
            "config-opts" : [
                "--disable-doc",
                "--disable-decoders",
                "--disable-encoders",
                "--disable-devices",
                "--disable-ffplay",
                "--disable-ffprobe",
                "--enable-gpl"
            ],
            "cleanup" : [
                "/include",
                "/lib",
                "/share"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.ffmpeg.org/releases/ffmpeg-4.3.1.tar.xz",
                    "sha256" : "ad009240d46e307b4e03a213a0f49c11b650e445b1f8be0dda2a9212b34d2ffb"
                }
            ]
        },
        {
            "name" : "libsass",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=/app/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "sassc",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=/app/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "commit" : "bfac98df61105d6453140b248ea4c46c3c152036"
                }
            ]
        },
        {
            "name" : "video-trimmer",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/video-trimmer/uploads/310999a068b7be3228ba55b09e784fe3/video-trimmer-0.6.0.tar.xz",
                    "sha256" : "66e1de36e829f8c792fb22da98d7303382ee4cdd5ae61ce225a7830687f06070"
                }
            ]
        }
    ]
}
