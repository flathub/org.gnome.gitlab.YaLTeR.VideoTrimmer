{
    "app-id" : "org.gnome.gitlab.YaLTeR.VideoTrimmer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions" : {
        "org.freedesktop.Platform.ffmpeg-full" : {
            "directory" : "lib/ffmpeg",
            "version" : "23.08",
            "add-ld-path" : "."
        }
    },
    "cleanup-commands" : [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "command" : "video-trimmer",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=xdg-videos"
    ],
    "cleanup" : [
        "/bin/blueprint-compiler",
        "/lib/pkgconfig"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        {
            "name" : "blueprint",
            "buildsystem" : "meson",
            "cleanup": [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "commit" : "2a39a16391122af2f3d812e478c1c1398c98b972"
                }
            ]
        },
        {
            "name" : "video-trimmer",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/video-trimmer/uploads/191a147cace8346030b957422f8b31a9/video-trimmer-0.8.2.tar.xz",
                    "sha256" : "bb44b6bd5f20718dc54926db3eec36820d0b14f6f7ff5dcf40919658086c60ef"
                }
            ]
        }
    ]
}
